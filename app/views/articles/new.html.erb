<section class='create-article container'>
  <h1>Create An Article!</h1>
  <%= form_for :articles do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :article_image %>
      <%= f.file_field :image, class: 'form-control-file' %>
    </div>

    <%= f.fields_for :categories do |c| %>
      <div class="form-group">
        <%= c.label :name, 'Select category' %>
        <%= c.select :name, options_for_select(['Computers', 'Robotics', 'Video Games', 'Phones']), {}, { class: 'form-control' } %>
      </div>
    <% end %>

  <% end %>
</section>
